[General]
FullMachineName         = <%= node['fqdn'] %>
SuiteSpotGroup          = dirsrv
SuiteSpotUserID         = dirsrv
<% if @params['admin_remote_host'] -%>
  <% if @params['admin_domain'] %>
AdminDomain             = <%= @params['admin_domain'] %>
  <% end -%>
ConfigDirectoryAdminID  = <%= @params['admin_id'] %>
ConfigDirectoryAdminPwd = <%= @params['admin_pass'] %>
ConfigDirectoryLdapURL  = ldap://<%= @params['admin_remote_host'] %>:<%= @params['admin_port'] %>/o=NetscapeRoot
<% end -%>

<% if @params['admin_local_bindaddr'] -%>
[admin]
Port            = <%= @params['admin_port'] %>
ServerAdminID   = <%= @params['admin_id'] %>
ServerAdminPwd  = <%= @params['admin_pass'] %>
ServerIpAddress = <%= @params['admin_local_bindaddr'] %>
SysUser         = dirsrv
<% end -%>

[slapd]
AddOrgEntries    = <%= @params['add_org_entries'] %>
AddSampleEntries = <%= @params['add_sample_entries'] %>
InstallLdifFile  = <%= @params['preseed_ldif'] %>
RootDN           = <%= @params['root_dn'] %>
RootDNPwd        = <%= @params['root_pass'] %>
ServerIdentifier = <%= @params['instance'] %>
ServerPort       = <%= @params['port'] %>
Suffix           = <%= @params['suffix'] %>
bak_dir          = <%= @base_dir %>/slapd-<%= @params['instance'] %>/bak
cert_dir         = <%= @conf_dir %>/slapd-<%= @params['instance'] %>
config_dir       = <%= @conf_dir %>/slapd-<%= @params['instance'] %>
db_dir           = <%= @base_dir %>/slapd-<%= @params['instance'] %>/db
ldif_dir         = <%= @base_dir %>/slapd-<%= @params['instance'] %>/ldif
schema_dir       = <%= @conf_dir %>/slapd-<%= @params['instance'] %>/schema
